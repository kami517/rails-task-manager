<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <% if @task.persisted? %>
    <div>
      <%= form.label :completed %>
      <%= form.check_box :completed %>
    </div>
  <% end %>
  <div>
    <%= form.submit %>
  </div>
<% end %>

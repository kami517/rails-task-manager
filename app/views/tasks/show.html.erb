<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Status: <%= @task.completed ? "Completed" : "Incomplete" %></p>
<%= link_to 'Back to tasks', tasks_path %>
<%= link_to 'Edit', edit_task_path(@task) %>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>
